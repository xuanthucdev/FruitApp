@{
    ViewData["Title"] = "Login Page";
}

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}





<div class="cont">
    <div class="form sign-in">
        <h2>Chào mừng bạn!!!</h2>
        <label>
            <span>Email</span>
            <input type="email" />
        </label>
        <label>
            <span>MẬT KHẨU</span>
            <input type="password" />
        </label>
        <p class="forgot-pass">Quên mật khẩu ?</p>
        <button type="button" class="submit">Đăng nhập</button>
        <button type="button" class="submit_home">
            <a asp-controller="Home" asp-action="Index" class="a_style">Trang chủ</a>
        </button>
    </div>
    <div class="sub-cont">
        <div class="img">
            <div class="img__text m--up">

                <h3>Bạn chưa có tài khoản? Vui lòng đăng kí!</h3>
                <button type="button" class="submit_reg">
                    <a asp-controller="Register" asp-action="Index" class="a_style">Đăng kí</a>
                </button>
            </div>
            
            
                
                
           
        </div>
       
    </div>
</div>
