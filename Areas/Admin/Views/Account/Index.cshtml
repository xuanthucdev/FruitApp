@model IEnumerable<ProjectDotNet.Models.Account>

@{
    ViewData["Title"] = "Account List";
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .custom-width {
        max-width: 1200px; 
        margin: 0 auto; 
    }
</style>






<div class="container mt-4">
    <div class="row justify-content-between">
        <div class="col-12 custom-width mb-3">
            <a asp-action="AddAccount" asp-controller="Account" asp-area="Admin" class="btn btn-primary">Add New Account</a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 custom-width">
            <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                <h2 class="tm-block-title">Account List</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Address</th>
                            <th scope="col">Role</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var acc in Model)
                        {
                            <tr>
                                <td><b>@acc.Id</b></td>
                                <td><b>@acc.Name</b></td>
                                <td>@acc.Email</td>
                                <td><b>@acc.Phone</b></td>
                                <td><b>@acc.Address</b></td>
                                <td><b>@acc.Role</b></td>
                                <td>
                                    <form asp-action="EditAccount" asp-area="Admin" asp-controller="Account" method="post" style="display:inline;">
                                        <input type="hidden" name="Id" value="@acc.Id" />
                                        <button type="submit" class="btn btn-sm" style="background: none; border: none; color: inherit; padding: 0; cursor: pointer; width:30px;">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form asp-action="DeleteAccount" asp-area="Admin" asp-controller="Account" method="post" style="display:inline;" onsubmit="return confirmDelete();">
                                        <input type="hidden" name="Id" value="@acc.Id" />
                                        <button type="submit" class="btn btn-sm" style="background: none; border: none; color: inherit; padding: 0; cursor: pointer; width:30px;">
                                            <i class="far fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this account?");
    }
</script>


