@{
    ViewData["Title"] = "Admin - Product Management";
}
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">PRODUCT NAME</th>
                                <th scope="col">PRICE</th>
                                <th scope="col">STOCK</th>
                                <th scope="col">CATEGORY</th>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach ( var p in ViewBag.products)
                            {
                                <tr>
                                    <th scope="row"><input type="checkbox" /></th>
                                    <td class="tm-product-name">@p.Name</td>
                                    <td>@p.Price</td>
                                    <td>@p.Stock</td>
                                    <td>@p.CategoryName</td>
                                    <td>
                                       
                                        <form asp-action="EditProduct" asp-area="Admin" asp-controller="Product" method="post" style="display:inline;">


                                            <input type="hidden" name="id" value="@p.Id" />

                                            <button type="submit" class="btn  btn-sm" style="background: none;
                                                          border: none;
                                                        color: inherit;
                                                        padding: 0;
                                                        cursor: pointer;
                                                        width:30px;">
                                                <i class="fas fa-pen"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <form asp-action="DeleteProduct" asp-area="Admin" asp-controller="Product" method="post" style="display:inline;" onsubmit="return confirmDeleteProduct();">
                                           

                                            <input type="hidden" name="id" value="@p.Id" />

                                            <button type="submit" class="btn  btn-sm" style="background: none;
                                                          border: none;
                                                        color: inherit;
                                                        padding: 0;
                                                        cursor: pointer;
                                                        width:30px;">
                                                <i class="far fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                           

                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a asp-action="AddProduct" asp-controller="Product" asp-area="Admin"
                   class="btn btn-primary btn-block text-uppercase mb-3">Add new product</a>
                <button class="btn btn-primary btn-block text-uppercase">
                    Delete selected products
                </button>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
                <h2 class="tm-block-title">Product Categories</h2>
                <div class="tm-product-table-container">
                    <table class="table tm-table-small tm-product-table">
                        <tbody>
                            @foreach ( var c in ViewBag.categories)
                            {
                                <tr>
                                    <td class="tm-product-name">@c.Name</td>
                                    <td>

                                        <form asp-action="EditCategory" asp-area="Admin" asp-controller="Product" method="post" style="display:inline;">


                                            <input type="hidden" name="id" value="@c.Id" />

                                            <button type="submit" class="btn  btn-sm" style="background: none;
                                                          border: none;
                                                        color: inherit;
                                                        padding: 0;
                                                        cursor: pointer;
                                                        width:30px;">
                                                <i class="fas fa-pen"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <form asp-action="DeleteCategory" asp-area="Admin" asp-controller="Product" method="post" style="display:inline;" onsubmit="return confirmDeleteCategory();">


                                            <input type="hidden" name="Id" value="@c.Id" />

                                            <button type="submit" class="btn  btn-sm" style="background: none;
                                                          border: none;
                                                        color: inherit;
                                                        padding: 0;
                                                        cursor: pointer;
                                                        width:30px;">
                                                <i class="far fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <form asp-action="AddCategory" asp-area="Admin" asp-controller="Product" method="post">
                    <button class="btn btn-primary btn-block text-uppercase mb-3">
                        Add new category
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDeleteProduct() {
        return confirm("Are you sure you want to delete this product?");
    }
    function confirmDeleteCategory() {
        return confirm("Are you sure you want to delete this category?");
    }
</script>
